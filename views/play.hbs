	if(gameTurn == 'white')
	{
		if(currplayer == 'white')
			$("#player-timer").text((ms/60000).toFixed(2));
		else
			$("#opponent-timer").text((ms/60000).toFixed(2));
	}
}

function blackOnTick(ms){
	if(gameTurn == 'black')
	{
		if(currplayer == 'black')
			$("#player-timer").text((ms/60000).toFixed(2));
		else
			$("#opponent-timer").text((ms/60000).toFixed(2));
	}
}

